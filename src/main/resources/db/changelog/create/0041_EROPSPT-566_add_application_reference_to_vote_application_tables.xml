<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="dan.wilkins@softwire.com" id="0041_EROPSPT-566_add_application_reference_to_vote_application_tables">
        <addColumn tableName="postal_vote_application">
            <column name="application_reference" type="varchar(10)" afterColumn="created_at" />
        </addColumn>

        <addColumn tableName="proxy_vote_application">
            <column name="application_reference" type="varchar(10)" afterColumn="created_at" />
        </addColumn>

        <rollback>
            <dropColumn tableName="postal_vote_application" columnName="application_reference" />
            <dropColumn tableName="proxy_vote_application" columnName="application_reference" />
        </rollback>
    </changeSet>
</databaseChangeLog>
