<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="connor.whitworth@softwire.com" id="0034_EIP1-12835_add_register_check_status_gss_code_idx"
               context="ddl">

        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists tableName="register_check" indexName="register_check_status_gss_code_idx" />
            </not>
        </preConditions>

        <createIndex tableName="register_check" indexName="register_check_status_gss_code_idx">
            <column name="status" />
            <column name="gss_code" />
        </createIndex>

        <rollback>
            <dropIndex tableName="register_check" indexName="register_check_status_gss_code_idx" />
        </rollback>
    </changeSet>

    <changeSet author="connor.whitworth@softwire.com" id="0034_EIP1-12835_drop_reg_check_status_gss_code_idx"
               context="ddl" >
        <dropIndex tableName="register_check" indexName="reg_check_status_gss_code_idx" />

        <rollback>
            <createIndex tableName="register_check" indexName="reg_check_status_gss_code_idx">
                <column name="status" />
            </createIndex>
        </rollback>
    </changeSet>
</databaseChangeLog>